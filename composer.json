{
    "name":         "bnet/bnrepos",
    "type":         "library",
    "description":  "lazy PHP5 library that provides Repositories as filesystem abstraction layer",
    "keywords":     ["file", "repository", "filesystem", "media", "abstraction"],
	"license": "MIT",
	"require": {
        "php": ">=5.3.2",
	    "aws/aws-sdk-php": "2.2.*",
	    "symfony/yaml": "2.2.*",
	    "herzult/php-ssh": "@dev",
	    "knplabs/gaufrette": "v0.1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "suggest": {
        "amazonwebservices/aws-sdk-for-php": "to use the Amazon S3 adapter With the OLD API",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*"
    },
    "autoload": {
        "psr-0": { "BNRepo": "src/" }
    }
 }
